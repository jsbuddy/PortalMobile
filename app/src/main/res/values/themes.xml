<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Portal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.Portal.ShapeAppearanceOverlay</item>
        <item name="shapeAppearanceOverlay">@style/Theme.Portal.ShapeAppearanceOverlay</item>
    </style>

    <style name="Theme.Portal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Portal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.Portal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Portal.ShapeAppearanceOverlay">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

    <style name="Theme.Portal.Drawer">
        <item name="android:listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="Theme.Portal.DrawerTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>
</resources>